@model IEnumerable<MVCCodeFirst_TrainingAcademySln.Models.RoleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info", @role = "button" })
                @Html.ActionLink("Role Wise User", "UserInRole", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
                @Html.ActionLink("Assign Role to User", "EditUserInRole", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
            </td>
        </tr>
    }

</table>
