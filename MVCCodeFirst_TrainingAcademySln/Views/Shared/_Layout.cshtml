<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Training Academy Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link href="~/Content/Site.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />*@
</head>
<body>
    <nav class="navbar navbar-inverse bg-success ">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Training Academy</a>
            </div>
            <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {

                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="active">@Html.ActionLink("Student Info", "Index", "Students")</li>
                    <li class="active">@Html.ActionLink("Training", "CreateTrainingAjax", "Training")</li>
                    <li class="active">@Html.ActionLink("Trainer", "CreateTrainerAjax", "Trainer")</li>
                    if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <li class="active">@Html.ActionLink("Manage Roles", "Index", "Administrator")</li>
                    }
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
       
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @*<script src="~/Scripts/jquery-3.6.0.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/moment.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
        <script src="~/Scripts/CustomScript.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)    
</body>
</html>
